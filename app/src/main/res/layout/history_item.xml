<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape"
    android:orientation="horizontal">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center">


        <ImageView
            android:layout_weight="1"
            android:id="@+id/ivBarcodeIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/barcode_icon" />

        <TextView
            android:layout_weight="8"
            android:id="@+id/tvBarcodeNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:text="AAAAAAAAAAAAA"
            android:textColor="@color/white"
            android:textSize="17dp" />


        <LinearLayout
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:layout_toRightOf="@id/tvBarcodeNumber"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textAlignment="textEnd"
                android:id="@+id/tvHistoryDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="AAAAAAAAAAAAA"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:layout_below="@+id/tvBarcodeNumber"
                android:layout_alignStart="@+id/tvBarcodeNumber" />

            <TextView
                android:id="@+id/tvHistoryTime"
                android:textStyle="italic"
                android:textAlignment="textEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="AAAAAAAAAAAAA"
                android:textColor="@color/white"
                android:textSize="10dp"
                android:layout_below="@+id/tvBarcodeNumber"
                android:layout_alignStart="@+id/tvBarcodeNumber" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>